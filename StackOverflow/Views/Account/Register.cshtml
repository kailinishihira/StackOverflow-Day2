@using StackOverflow.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Register a new user</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="card">
    	<div class="card-block">
            <div class="form-group">
            	@Html.LabelFor(user => user.Email)
                @Html.TextBoxFor(user=> user.Email, new { @class = "form-control"})
                @Html.ValidationMessageFor(user=> user.Email, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
            	@Html.LabelFor(user=> user.Password)
                @Html.PasswordFor(user=> user.Password, new { @class = "form-control"})
                @Html.ValidationMessageFor(user=> user.Password, null, new { @class = "text-danger" })
            </div>
            
            <div class="form-group">
                @Html.LabelFor(user=> user.ConfirmPassword)
                @Html.PasswordFor(user=> user.ConfirmPassword, new { @class = "form-control"})
                @Html.ValidationMessageFor(user=> user.ConfirmPassword, null, new { @class = "text-danger" })
            </div>
            <input type="submit" value="Register" />
		</div>
	</div>
}