
 @model StackOverflow.Models.Question

@{
    ViewData["Title"] = "Create New Question";
 }



<h2>Ask a Question</h2>
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BodyContent, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextAreaFor(m => m.BodyContent, new { @class = "form-control", @rows = 10 })
                    @Html.ValidationMessageFor(m => m.BodyContent, null, new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Tag, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Tag, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Tag, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-6">
                    <input type="submit" value="Create" class="btn btn-lg btn-primary" />
                </div>
            </div>
        </div>
    }
}
<a href="@Url.Action("Index")" class="btn btn-default">
    <i class="fa fa-2x fa-arrow-circle-left" aria-hidden="true"></i>
    <span>Back to list</span>
</a>
